<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white">

    <!-- Sección de datos del accidente -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/tv_id_accidente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Accidente:"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_numplaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placa:"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_id_agente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agente:"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora:"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción:"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_latitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitud:"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_longitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitud:"
            android:textColor="#444444" />
    </LinearLayout>

    <!-- Sección para la imagen del accidente -->
    <ImageView
        android:id="@+id/iv_foto_accidente"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_menu_nofoto"
        android:background="@android:color/darker_gray"
        android:contentDescription="Foto del Accidente"
        android:layout_marginStart="8dp"/>
</LinearLayout>
