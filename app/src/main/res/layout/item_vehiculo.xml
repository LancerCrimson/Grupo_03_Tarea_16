<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white">

    <!-- Sección de datos del vehículo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/tv_placa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placa:"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marca:"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_modelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modelo:"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_motor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Motor:"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Año:"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_cedula_propietario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cédula del Propietario:"
            android:textColor="#444444" />
    </LinearLayout>

    <!-- Sección para la imagen -->
    <ImageView
        android:id="@+id/iv_foto_vehiculo"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_menu_nofoto"
        android:background="@android:color/darker_gray"
        android:contentDescription="Foto del Vehículo"
        android:layout_marginStart="8dp"/>
</LinearLayout>
